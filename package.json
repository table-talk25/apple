{
  "name": "table-talk",
  "version": "1.0.0",
  "description": "Un'app per trovare compagni di pasto virtuali",
  "main": "index.js",
  "scripts": {
    "start": "node BACKEND/server.js",
    "server": "nodemon BACKEND/server.js",
    "client": "npm start --prefix FRONTEND/client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "install-all": "npm install && npm install --prefix BACKEND && npm install --prefix FRONTEND/client",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix FRONTEND/client && npm run build --prefix FRONTEND/client"
  },
  "keywords": [
    "mern",
    "react",
    "express",
    "mongodb",
    "video",
    "chat",
    "meals"
  ],
  "author": "TableTalk",
  "license": "MIT",
  "dependencies": {
    "@capacitor/android": "^7.4.3",
    "@capacitor/app": "^7.1.0",
    "@capacitor/browser": "^7.0.2",
    "@capacitor/cli": "^7.4.3",
    "@capacitor/core": "^7.4.3",
    "@capacitor/ios": "^7.4.3",
    "@capacitor/keyboard": "^7.0.3",
    "@capacitor/preferences": "^7.0.2",
    "@capacitor/push-notifications": "^7.0.3",
    "@hookform/resolvers": "^5.0.1",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dayjs": "^1.11.13",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.5.0",
    "express-validator": "^7.0.1",
    "firebase": "^12.4.0",
    "handlebars": "^4.7.8",
    "helmet": "^8.1.0",
    "hpp": "^0.2.3",
    "i18next": "^25.3.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^7.0.3",
    "react-i18next": "^15.6.1",
    "socket.io": "^4.7.2",
    "winston": "^3.17.0",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "jest": "^29.6.4",
    "nodemon": "^3.0.1",
    "typescript": "^5.9.3"
  }
}
